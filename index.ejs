<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>URL Shrinker</title>
</head>
<body> 

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><h4>URL Shrinker</h4></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
             
            </ul>
            <form class="d-flex" action="/search" method="get" >
              <input class="form-control me-2" required type="text" name="dsearch" id="dsearch" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>

    <div class="container">
        
        <br>

        <div class="container-sm" style="width: 60vw;">

    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input required type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
        <br>
        <label for="note" class="sr-only">Note</label>
        <input required type="text" name="note" id="note" class="form-control col mr-2 ">
        <br>
        <button class="btn btn-dark" type="submit">Shorten</button>
    </form>

</div>

    <hr>
    <!-- <br> -->
    <!-- <form action="/search" method="get" class="my-4 form-inline row">
        <input required type="text" name="dsearch" id="dsearch" class="form-control col mr-2 me-3" placeholder="Search">
        <br>
        <button class="btn btn-success col-md-2" type="submit">Search</button>
    </form> -->

    <br>

    <%if(data.length>0){%> 

    <table class="table table-striped table responsive mb-3">
        <thead class="table-dark">
            <tr>
                <th>Full Url</th>
                <th>Note</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(shortUrl){ %>
                <tr>
                    <td><a href="<%= shortUrl?.full %>" target="_blank"><%= shortUrl?.full %></a></td>
                    <td><%= shortUrl?.note %></td>
                    <td><a href="<%= shortUrl?.short %>" target="_blank"><%= shortUrl?.short %></a></td>
                    <td><%= shortUrl?.clicks %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <%}else{%> 
        <h3>No Search Data Found</h3>
    <%}%> 

    <%if(data.length < 3){%> 
        <h3><a href="/">Go Back</a></h3>
    <%}%>

    <br>
  
</div>
</body>
</html>